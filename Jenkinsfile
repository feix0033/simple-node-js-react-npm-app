pipeline {
    agent {
        docker {
            image 'node:6-alpine'
            args '-p 3000:3000'
        }
    }
    environment {
        CI = 'true' 
    }
    stages {
        stage('Build') {
            steps {
                sh'''
                npm set registry http://localhost:4873/
                npm install lodash --registry http://localhost:4873
                yarn config set registry http://localhost:4873/
                '''
                sh 'npm get registry'
                sh 'npm install'
            }
        }
        stage('Test') { 
            steps {
                sh './jenkins/scripts/test.sh' 
            }
        }
    }
}